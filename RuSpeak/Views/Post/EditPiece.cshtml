@model RuSpeak.Models.Things.PieceInfo

@{
    ViewBag.Title = "Редактор кусочков контента";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    
    @using (Html.BeginForm("EditPiece", "Post", FormMethod.Post, new { enctype = "multipart/form-data", @class = "content-input", role = "form" }))
    {
        @Html.AntiForgeryToken()
        
        <h2 class="form-signin-heading">Редактор кусочков контента</h2>
        <div class="form-group">
            <div>
                @Html.TextBoxFor(m => m.Header, new {@class="form-control", @placeholder="Название частички"})
            </div>
        </div>
            
        <div class="form-group">
            <div>
                @Html.TextAreaFor(m => m.Content, new {@class="form-control", @placeholder="Контент частички", @rows=25, @style="resize: none"})
            </div>
        </div>

        <div class="form-group hidden">
            <div>
                @Html.TextAreaFor(m => m.PostId, new {@class="form-control"})
            </div>
        </div>
        
        <div class="form-group hidden">
            <div>
                @Html.TextAreaFor(m => m.PieceContentId, new {@class="form-control"})
            </div>
        </div>
            
        @Html.ValidationSummary()

        <button type="submit" class="btn btn-lg btn-primary btn-block">Сохранить</button>
        
        
        @Html.ActionLink("Отменить", "Index", "Home", null, new { @class = "btn btn-lg btn-warning btn-block" })
        
    }
            
</div>