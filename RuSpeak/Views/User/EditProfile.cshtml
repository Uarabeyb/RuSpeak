@model RuSpeak.Models.Auth.UserProfile

@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("EditProfile", "User", FormMethod.Post, new { @class = "form-signin", role="form" }))
    {
        @Html.AntiForgeryToken()
        
        <h2 class="form-signin-heading">Редактор профиля</h2>
        
        <div class="form-group">
            <div>
                @Html.TextBoxFor(m => m.Email, new {@class="form-control", @placeholder="Email"})
            </div>
        </div>
        
        <div class="form-group">
            <div>
                @Html.TextBoxFor(m => m.UserName, new {@class="form-control", @placeholder="Name"})
            </div>
        </div>
        
        <div class="form-group hidden" >
            <div>
                @Html.TextBoxFor(m => m.UserId, new {@class="form-control", @placeholder="Id"})
            </div>
        </div>
        
        @Html.ValidationSummary()

        <button type="submit" class="btn btn-lg btn-primary btn-block">Save</button>
        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-lg btn-warning btn-block" })

    }
</div>