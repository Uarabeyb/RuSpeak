@using System.Web.Optimization
@model RuSpeak.Models.Auth.LoginView

@{
    ViewBag.Title = "Sign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<div class="container">
    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-signin", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <h2 class="form-signin-heading">Вход</h2>

        <div class="form-group">
            <input type="email" class="form-control" name="Email" placeholder="Почта" required autofocus>
        </div>
        
        <div class="form-group">
            <input type="password" class="form-control" name="Password" placeholder="Пароль" required>
        </div>
        
        <div class="form-group">
            <label>
                <input type="checkbox" name="IsPersistent" value="true"> 
                Запомнить меня
            </label>
        </div>
        
  
        @Html.ValidationSummary()

        <button type="submit" class="btn btn-lg btn-primary btn-block">Войти</button>
        
        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-lg btn-warning btn-block" })
    }
</div>
